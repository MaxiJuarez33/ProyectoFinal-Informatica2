---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { getSensors, checkApiConnection, demoData } from '../utils/api.js';

// Try to fetch real sensor data from backend API
let apiAvailable = false;
let sensorsData = {
  temperature: [],
  level: [],
  current: [],
  voltage: []
};

try {
  apiAvailable = await checkApiConnection();
  
  if (apiAvailable) {
    const response = await getSensors();
    const sensors = response?.data || {};
    
    // Transform the sensor data structure from the API
    sensorsData = {
      temperature: [
        { id: 'temp_interior', name: 'Temperatura Interior', value: sensors.temperature?.interior?.value || 0, unit: sensors.temperature?.interior?.unit || '°C', status: sensors.temperature?.interior?.status || 'normal' },
        { id: 'temp_exterior', name: 'Temperatura Exterior', value: sensors.temperature?.exterior?.value || 0, unit: sensors.temperature?.exterior?.unit || '°C', status: sensors.temperature?.exterior?.status || 'normal' }
      ],
      level: [],
      current: Object.entries(sensors.electrical || {}).map(([key, data]) => ({
        id: `current_${key}`,
        name: `Corriente ${key.charAt(0).toUpperCase() + key.slice(1)}`,
        value: data?.value || 0,
        unit: data?.unit || 'A',
        status: data?.status || 'normal'
      })),
      voltage: [
        { id: 'voltage_battery', name: 'Voltaje Batería', value: sensors.electrical?.battery?.value || 0, unit: 'V', status: sensors.electrical?.battery?.status || 'normal' }
      ]
    };
  } else {
    // Use demo data fallback
    const sensors = demoData.sensors.data;
    sensorsData = {
      temperature: [
        { id: 'temp_interior', name: 'Temperatura Interior', value: sensors.temperature?.interior?.value || 0, unit: sensors.temperature?.interior?.unit || '°C', status: sensors.temperature?.interior?.status || 'normal' },
        { id: 'temp_exterior', name: 'Temperatura Exterior', value: sensors.temperature?.exterior?.value || 0, unit: sensors.temperature?.exterior?.unit || '°C', status: sensors.temperature?.exterior?.status || 'normal' }
      ],
      level: [],
      current: Object.entries(sensors.electrical || {}).filter(([key]) => key !== 'battery').map(([key, data]) => ({
        id: `current_${key}`,
        name: `Corriente ${key.charAt(0).toUpperCase() + key.slice(1)}`,
        value: data?.value || 0,
        unit: data?.unit || 'A',
        status: data?.status || 'normal'
      })),
      voltage: [
        { id: 'voltage_battery', name: 'Voltaje Batería', value: sensors.electrical?.battery?.value || 0, unit: 'V', status: sensors.electrical?.battery?.status || 'normal' }
      ]
    };
  }
} catch (error) {
  console.error('Error fetching sensor data:', error);
  apiAvailable = false;
  // Use demo data fallback
  const sensors = demoData.sensors.data;
  sensorsData = {
    temperature: [
      { id: 'temp_interior', name: 'Temperatura Interior', value: sensors.temperature?.interior?.value || 0, unit: sensors.temperature?.interior?.unit || '°C', status: sensors.temperature?.interior?.status || 'normal' },
      { id: 'temp_exterior', name: 'Temperatura Exterior', value: sensors.temperature?.exterior?.value || 0, unit: sensors.temperature?.exterior?.unit || '°C', status: sensors.temperature?.exterior?.status || 'normal' }
    ],
    level: [],
    current: Object.entries(sensors.electrical || {}).filter(([key]) => key !== 'battery').map(([key, data]) => ({
      id: `current_${key}`,
      name: `Corriente ${key.charAt(0).toUpperCase() + key.slice(1)}`,
      value: data?.value || 0,
      unit: data?.unit || 'A',
      status: data?.status || 'normal'
    })),
    voltage: [
      { id: 'voltage_battery', name: 'Voltaje Batería', value: sensors.electrical?.battery?.value || 0, unit: 'V', status: sensors.electrical?.battery?.status || 'normal' }
    ]
  };
}

const getStatusColor = (status: string) => {
  switch (status) {
    case 'normal': return 'text-green-600 bg-green-100 border-green-200';
    case 'warning': return 'text-yellow-600 bg-yellow-100 border-yellow-200';
    case 'critical': return 'text-red-600 bg-red-100 border-red-200';
    case 'offline': return 'text-gray-600 bg-gray-100 border-gray-200';
    default: return 'text-gray-600 bg-gray-100 border-gray-200';
  }
};

const getSensorIcon = (type: string) => {
  switch (type) {
    case 'temperature':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>`;
    case 'level':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>`;
    case 'current':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>`;
    case 'voltage':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>`;
    default:
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2z"></path>`;
  }
};

const renderSensorCard = (sensor: any, type: string) => {
  return `
    <div class="bg-white rounded-lg shadow-strong border border-gray-200 p-4 hover:shadow-xl transition-shadow duration-200">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              ${getSensorIcon(type)}
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-gray-900 text-sm">${sensor.name}</h3>
            <p class="text-xs text-gray-500 font-mono">${sensor.id}</p>
          </div>
        </div>
        <span class="px-2 py-1 rounded-full text-xs font-semibold border ${getStatusColor(sensor.status)}">
          ${sensor.status.toUpperCase()}
        </span>
      </div>
      
      <div class="mb-3">
        <div class="text-2xl font-bold text-gray-900 mb-1">
          ${sensor.value} <span class="text-lg text-gray-600">${sensor.unit}</span>
        </div>
        <p class="text-xs text-gray-500">${sensor.location}</p>
      </div>
      
      <div class="flex items-center justify-between text-xs text-gray-500">
        <span>Última lectura: hace 1 min</span>
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
      </div>
    </div>
  `;
};
---

<DashboardLayout title="Monitoreo de Sensores">
  <div class="space-y-6">
    <!-- Resumen general -->
    <div class="bg-white rounded-lg shadow-strong border border-gray-200 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Estado General de Sensores</h3>
