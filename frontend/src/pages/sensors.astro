          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-red-700">Críticos</span>
            <span class="text-2xl font-bold text-red-900">0</span>
          </div>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
          <div class="flex items-center justify-between">
            <span class="text-sm font-medium text-gray-700">Offline</span>
            <span class="text-2xl font-bold text-gray-900">0</span>
          </div>
        </div>
      </div>
    </div>

