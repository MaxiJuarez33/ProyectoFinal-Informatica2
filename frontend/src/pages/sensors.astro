            <div class="mb-3">
              <div class="text-2xl font-bold text-gray-900 mb-1">
                {sensor.value} <span class="text-lg text-gray-600">{sensor.unit}</span>
              </div>
              <p class="text-xs text-gray-500">{sensor.location}</p>
              <!-- Barra de progreso para sensores de nivel -->
              <div class="mt-2">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div 
                    class={`h-2 rounded-full transition-all duration-500 ${sensor.value >= 70 ? 'bg-green-500' : sensor.value >= 40 ? 'bg-yellow-500' : 'bg-red-500'}`}
                    style={`width: ${sensor.value}%`}
                  ></div>
                </div>
