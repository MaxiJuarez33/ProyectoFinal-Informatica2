---
export interface Props {
  device: {
    id: number;
    name: string;
    type: string;
    active: boolean;
    value?: number;
    unit?: string;
    status: string;
  };
}

const { device } = Astro.props;

const getDeviceIcon = (type: string) => {
  switch (type) {
    case 'sensor': return 'üì°';
    case 'actuator': return '‚öôÔ∏è';
    case 'system': return 'üîß';
    default: return 'üìü';
  }
};

const getStatusColor = (status: string, active: boolean) => {
  if (!active) return 'bg-gray-100 text-gray-800';
  switch (status) {
    case 'normal': return 'bg-green-100 text-green-800';
    case 'warning': return 'bg-yellow-100 text-yellow-800';
    case 'critical': return 'bg-red-100 text-red-800';
    case 'running': return 'bg-blue-100 text-blue-800';
    case 'stopped': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
};
---

<div class="bg-white rounded-lg shadow-md p-6 border hover:shadow-lg transition-shadow">
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center">
      <div class={`w-10 h-10 rounded-lg flex items-center justify-center text-xl ${
        device.active ? 'bg-blue-500 text-white' : 'bg-gray-300 text-gray-600'
      }`}>
        {getDeviceIcon(device.type)}
      </div>
      <div class="ml-3">
        <h3 class="text-lg font-medium text-gray-900">
          {device.name}
        </h3>
        <p class="text-sm text-gray-500 capitalize">
          {device.type}
        </p>
      </div>
    </div>
    
    <!-- Toggle switch -->
    <div class="flex items-center">
      <input 
        type="checkbox" 
        id={`device-${device.id}`}
        checked={device.active}
        class="toggle-switch sr-only"
        data-device-id={device.id}
      />
      <label 
        for={`device-${device.id}`}
        class={`relative inline-flex h-6 w-11 items-center rounded-full cursor-pointer transition-colors ${
          device.active ? 'bg-blue-600' : 'bg-gray-300'
        }`}
      >
        <span class={`inline-block h-4 w-4 transform rounded-full bg-white transition ${
          device.active ? 'translate-x-6' : 'translate-x-1'
        }`}></span>
      </label>
    </div>
  </div>

  <!-- Valor del dispositivo (si aplica) -->
  {device.value !== undefined && (
    <div class="mb-4">
      <div class="flex items-baseline">
        <span class="text-2xl font-bold text-gray-900">
          {device.value}
        </span>
        {device.unit && (
          <span class="ml-1 text-lg text-gray-500">
            {device.unit}
          </span>
        )}
      </div>
    </div>
  )}

  <!-- Estado del dispositivo -->
  <div class="flex items-center justify-between">
    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStatusColor(device.status, device.active)}`}>
      <span class={`w-1.5 h-1.5 rounded-full mr-1.5 ${
        device.active && device.status === 'normal' ? 'bg-green-400' :
        device.active && device.status === 'running' ? 'bg-blue-400' :
        device.active ? 'bg-yellow-400' : 'bg-gray-400'
      }`}></span>
      {device.active ? 
        (device.status === 'normal' ? 'Activo' :
         device.status === 'running' ? 'En Funcionamiento' :
         device.status === 'stopped' ? 'Detenido' :
         device.status.charAt(0).toUpperCase() + device.status.slice(1)) :
        'Inactivo'
      }
    </span>
    
    {device.type === 'actuator' && (
      <button 
        class="text-blue-600 hover:text-blue-800 text-sm font-medium"
        onclick={`controlDevice(${device.id}, '${device.active ? 'stop' : 'start'}')`}
      >
        {device.active ? '‚èπÔ∏è Detener' : '‚ñ∂Ô∏è Iniciar'}
      </button>
    )}
  </div>

  <!-- Informaci√≥n adicional para sensores -->
  {device.type === 'sensor' && device.value !== undefined && (
    <div class="mt-4 pt-4 border-t border-gray-200">
      <div class="flex justify-between text-sm text-gray-600">
        <span>√öltima lectura:</span>
        <span id={`last-reading-${device.id}`}>Hace 2 min</span>
      </div>
    </div>
  )}
</div>

<script>
  // Funci√≥n para controlar dispositivos
  window.controlDevice = async function(deviceId, action) {
    try {
      const response = await fetch(`/api/devices/${deviceId}/toggle`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ action })
      });
      
      const result = await response.json();
      
      if (result.success) {
        // Recargar la p√°gina o actualizar el estado del dispositivo
        location.reload();
      } else {
        alert(`Error: ${result.error || 'No se pudo controlar el dispositivo'}`);
      }
    } catch (error) {
      console.error('Error controlando dispositivo:', error);
      alert('Error de conexi√≥n con el sistema');
    }
  };

  // Manejar cambios en los toggles
  document.addEventListener('DOMContentLoaded', function() {
    const toggles = document.querySelectorAll('.toggle-switch');
    
    toggles.forEach(toggle => {
      toggle.addEventListener('change', function() {
        const deviceId = this.dataset.deviceId;
        const action = this.checked ? 'turn_on' : 'turn_off';
        controlDevice(deviceId, action);
      });
    });
  });
</script>
