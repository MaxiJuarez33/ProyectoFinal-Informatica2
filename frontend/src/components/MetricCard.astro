---
export interface Props {
  title: string;
  value: string | number;
  unit?: string;
  icon: string;
  status: 'success' | 'warning' | 'danger' | 'info';
  change?: string;
  description?: string;
  id?: string;
}

const { title, value, unit, icon, status, change, description, id } = Astro.props;

const statusStyles = {
  success: 'border-success-200 bg-success-50',
  warning: 'border-warning-200 bg-warning-50',
  danger: 'border-danger-200 bg-danger-50',
  info: 'border-primary-200 bg-primary-50'
};

const iconStyles = {
  success: 'text-success-600 bg-success-100 border border-success-200',
  warning: 'text-warning-600 bg-warning-100 border border-warning-200',
  danger: 'text-danger-600 bg-danger-100 border border-danger-200',
  info: 'text-primary-600 bg-primary-100 border border-primary-200'
};
---

<div class={`bg-white rounded-xl shadow-card border-2 hover:shadow-card-hover transition-all duration-200 ${statusStyles[status]}`}>
  <div class="p-6">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center mb-4">
          <div class={`w-12 h-12 rounded-xl flex items-center justify-center mr-4 ${iconStyles[status]}`}>
            <span class="text-xl">{icon}</span>
          </div>
          <h3 class="text-sm font-semibold text-secondary-700 uppercase tracking-wider">
            {title}
          </h3>
        </div>
        
        <div class="flex items-baseline space-x-2 mb-3">
          <span id={id} class="text-3xl font-bold text-secondary-900">
            {value}
          </span>
          {unit && (
            <span class="text-lg font-medium text-secondary-600">
              {unit}
            </span>
          )}
        </div>
        
        {change && (
          <div class="flex items-center text-sm mb-2">
            <svg class="w-4 h-4 mr-1 text-success-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="text-success-600 font-semibold">{change}</span>
          </div>
        )}
        
        {description && (
          <p class="text-sm text-secondary-600 font-medium">
            {description}
          </p>
        )}
      </div>
    </div>
  </div>
</div>
