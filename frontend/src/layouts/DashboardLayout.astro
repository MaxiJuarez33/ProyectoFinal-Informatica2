---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Dashboard IoT - Sistema de Monitoreo" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>{title}</title>
</head>
<body class="bg-gray-50 font-inter">
	<div class="min-h-screen flex">
		<!-- Sidebar -->
		<nav class="w-64 bg-white shadow-strong border-r border-gray-200 fixed h-full z-30">
			<div class="p-6">
				<h1 class="text-2xl font-bold text-gray-900 mb-8">IoT Dashboard</h1>
				<ul class="space-y-2">
					<li>
						<a href="/" class="flex items-center p-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-700 transition-colors duration-200 group">
							<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
							</svg>
							<span class="font-semibold">Dashboard</span>
						</a>
					</li>
					<li>
						<a href="/devices" class="flex items-center p-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-700 transition-colors duration-200 group">
							<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
							<span class="font-semibold">Dispositivos</span>
						</a>
					</li>
					<li>
						<a href="/tanks" class="flex items-center p-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-700 transition-colors duration-200 group">
							<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
							</svg>
							<span class="font-semibold">Tanques</span>
						</a>
					</li>
					<li>
						<a href="/sensors" class="flex items-center p-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-700 transition-colors duration-200 group">
							<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
							</svg>
							<span class="font-semibold">Sensores</span>
						</a>
					</li>
				</ul>
			</div>
		</nav>

		<!-- Main Content -->
		<div class="flex-1 ml-64">
			<!-- Header -->
			<header class="bg-white shadow-md border-b border-gray-200 px-6 py-4">
				<div class="flex items-center justify-between">
					<h2 class="text-2xl font-bold text-gray-900">{title}</h2>
					<div class="flex items-center space-x-4">
						<span class="text-sm text-gray-500">Ãšltimo update: <span class="font-semibold">hace 2 min</span></span>
						<div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
					</div>
				</div>
			</header>

			<!-- Content -->
			<main class="p-6">
				<slot />
			</main>
		</div>
	</div>
</body>
</html>
